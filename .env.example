# PostgreSQL Database URL
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://postgres:password@localhost:5432/alphasuite

# --- Application Settings ---
# Set to "true" to enable demo mode, which uses a smaller, static dataset for quick testing.
DEMO_MODE=false

# Directory for generated reports, charts, and other artifacts
WORKING_DIRECTORY=./work/

# --- LLM Configuration ---

# Select the provider: 'gemini' or 'ollama'
LLM_PROVIDER=gemini

# Google Gemini API Key (required if LLM_PROVIDER is 'gemini')
GEMINI_API_KEY=YOUR_GEMINI_API_KEY_HERE

# (Optional) Ollama Configuration (used if LLM_PROVIDER is 'ollama')
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=llama3